    <!-- DaumMovie selectUsersRandomPreferMovie(Integer userNo); -->
    <select id="selectUsersRandomPreferMovie" resultType="DaumMovie" parameterType="Integer">
        select
            *
        from
            daum_movie
        where
            movie_id = (
                select
                    movie_id
                from
                    daum_user_movie
                where
                    user_no = #{userNo}
                order by
                    rand()
                limit
                    1
            )
    </select>
