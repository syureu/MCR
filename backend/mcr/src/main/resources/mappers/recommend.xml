<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.mcr.dao.RecommendDao">

    <!-- List<RecommendV1> selectRecommendV1() -->
    <select id="selectRecommendV1" resultType="RecommendV1">
        select
            id,
            poster_path,
            title
        from
            tmdb_movies
        order by
            rand()
        limit
            10
    </select>

    <!-- Movie selectRandomMovieByUsersPrefer(Long userNo); -->
    <select id="selectRandomMovieByUsersPrefer" parameterType="Long" resultType="Movie">
        select
            *
        from
            movie
        where movie_cd =
            (
                select
                    movie_cd
                from
                    user_movie
                where
                    user_no=#{userNo}
                order by
                    rand()
                limit
                    1
            )
    </select>
</mapper>

